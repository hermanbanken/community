<div class="table-wrap table-wrap-noborder" style="margin-top:1em">
<table class="table table-striped table-hover table-condensed table-bordered">
    <thead><tr>
      <th style="width:100px">{{t 'Date'}}</th>
      <th>{{t 'User'}}</th>
      <th>{{t 'Account'}}</th>
      <th  class='euro-col' style="width:100px">{{t 'Amount'}}</th>
    </tr></thead>
    {{#each changes}}
    <tr>
    	<td>{{@key}}</td>
    	<td>{{datef ../date 'll'}}</td>
    	<td></td>
    	<td class="euro">{{currency this}}</td>
    </tr>
    {{/each}}
    
    <tfoot>
      <td>
      	<input type="date" class="seamless" id="date" placeholder="Datum" value="{{datef date 'YYYY-MM-DD'}}" />
      </td>
      <td class="truncate">
      	<input data-type="personal-visual" class="seamless" type="text" placeholder="Add user deposit..."
        value="" />
    	</td>
      <td>
      	<select class="seamless">{{#each accounts}}
      		<option value="{{_id}}">{{this.name}}</option>
      	{{/each}}</select>
      </td>
      <td class="euro">
      	<input class="seamless euro" type="number" value="0.00" step="0.01" />
      </td>
    </foot>
</table>
</div>

<div class="dropbox" style="border: 2px dashed gray; padding: 2cm; text-align: center;margin-top:1em">
	Drop picture/pdf of declaration here
</div>