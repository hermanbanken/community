<h2>{{t 'Bills'}} 
  <small><a href="/bills/create">{{t 'new bill'}}</a></small>
</h2>
<div class="table-wrap">
  <table class="table table-striped table-hover">
    <thead><tr>
      <th>{{t 'Date'}}</th>
      <th>{{t 'Type'}}</th>
      <th>{{t 'Title'}}</th>
      <th class='euro-col'>&Delta; {{t 'Balance'}}</th>
    </tr></thead>
    {{#each bills}}
    <tr>
      <td><a href="/bills/{{_id}}">{{datef date 'll'}}</a></td>
      <td>{{type}}</td>
      <td>{{title}}</td>
      <td class='euro' value="{{currency (changeFor this ../user._id)}}">{{currency (changeFor this ../user._id)}}</td>
    </tr>
    {{/each}}
  </table>
</div>	