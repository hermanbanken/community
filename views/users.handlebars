<div class="container">
  <div class="row">
    <div class="col-md-9">
        <h2>{{t 'Users'}}</h2>
        <div class="table-wrap">
            <table class="table table-striped table-hover">
                <thead><tr>
                  <th>{{t 'User'}}</th>
                  <th class="hidden-xs">{{t 'Email'}}</th>
                  <th>{{t 'Tags'}}</th>
                  <th class='euro-col'>{{t 'Balance'}}</th>
                </tr></thead>
                {{#each users}}
                <tr>
                  <td><a href="/users/{{_id}}">{{name profile}}</a></td>
                  <td>{{#each profile.emails}}{{#if @index}}, {{/if}}{{this.value}}{{/each}}</td>
                  <td>{{#each tags}}<span class='tag badge'>{{this}}</span> {{/each}}</td>
                  <td class='euro' value="{{currency saldo}}">{{currency saldo}}</td>
                </tr>
                {{/each}}
            </table>
        </div>
    </div>
    <div class="col-md-3">
      <h2>{{t 'Accounts'}}</h2>
        <div class="table-wrap">
            <table class="table table-striped table-hover">
                <thead><tr>
                  <th>{{t 'Account'}}</th>
                  <th class='euro-col'>{{t 'Balance'}}</th>
                </tr></thead>
                {{#each accounts}}
                <tr>
                  <td><a href="/accounts/{{_id}}">{{this.name}}</a></td>
                  <td class='euro' value="{{currency saldo}}">{{currency saldo}}</td>
                </tr>
                {{/each}}
            </table>
        </div>
    </div>
  </div>
</div>